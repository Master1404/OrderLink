<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OrderLinkN.MainPage">


    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Label Text="Welcome" FontSize="Large" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />

        <Label x:Name="UserNameLabel" FontSize="Medium" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Text="{Binding FullName}" />
        <Button Text="LogOut" Command="{Binding LogOutCommand}" WidthRequest="150" HeightRequest="40" />
        
    </StackLayout>

</ContentPage>


    
    
    
    
    
    
    
    
    
    
    
    
    
    